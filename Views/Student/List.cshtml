﻿@model IEnumerable<Cumulative1.Models.Student>
@{
    ViewBag.Title = "List";
}

<div id="containerlist">
    <h2>List of Students</h2>

    <!-- Search Form -->
    <form action="/Student/List" method="GET">
        <label for="SearchKey">Search:</label>
        <input type="text" name="SearchKey" id="SearchKey" autocomplete="off" />
        <input type="submit" value="Search" />
    </form>

    <!-- Student Table -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.StudentId</td>
                    <td>@teacher.StudentFname @teacher.StudentLname</td>
                    <td><a href="/Student/Show/@teacher.StudentId">Show Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>